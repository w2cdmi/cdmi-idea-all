.flex-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.input-item {
    height: 100rpx;
    color: #333;
    background: #fff;
    text-align: right;
}

.input-title {
    padding: 0 10px 0 15px;
}

input {
    color: #999;
    padding-right: 30rpx;
    max-width: 200px;
}

.flex-center {
    justify-content: center;
    margin: 20rpx 0;
}

.lotteryBtn {
    background: #51bfb9;
    height: 44px;
    line-height: 44px;
    width: 90%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    border-radius: 5px;
    font-size: 15px;
}

.image-panel {
    background: #fff;
    display: flex;
    flex-wrap: wrap;
    padding: 10px 15px;
}

.image-panel > view {
    width: 25%;
}

.image-size {
    height: 60px;
    width: 60px;
}
.title{
    border-bottom:1px solid #f5f5f5;
    background:#fff;
    padding:10px 15px;
    color:#999;
    font-size:12px;
}
.margin-top{
    margin-top:10px;
}
