/* pages/lottery/lottery.wxss */

.flex-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.flex-item > view {
    width: 33.33%;
}

.block-item {
    background: #fff;
    margin-top: 10px;
    font-size: 12px;
    padding-bottom:10px;
}

.countdown-text {
    margin-right: 50rpx;
    text-align:right;
}

/*倒计时  */

.countdown-item {
    position: absolute;
    top: 0;
    left: 0;
    padding: 5rpx 30rpx;
    background: rgba(81, 191, 185, 0.5);
    z-index: 999;
    width: 100%;
    color: #fff;
    font-size: 12px;
}

/*手机信息  */

.phone-name {
    font-size: 14px;
    color: #333;
}

.price-text {
    font-size: 14px;
    color: #ea5036;
}

.padding-top {
    padding: 10rpx 30rpx;
}

.flex-start {
    justify-content: flex-start;
}

/*规则  */

.role-title {
    font-size: 14px;
    color: #333;
    padding: 10rpx 30rpx;
}

.role-tips {
    color: #ea5036;
    padding: 20rpx 30rpx;
}

.role-tips-text {
    color: #999;
    padding: 0 30rpx;
}

.role-tips-text> view {
    padding: 10rpx 0;
}

.flex-center {
    justify-content: center;
    margin: 20rpx 0;
}

.lotteryBtn {
    background: #51bfb9;
    font-size: 15px;
    height: 40px;
    line-height: 40px;
    width: 90%;
    color: #fff;
    border-radius: 5px;
    text-align:center;
    margin:10rpx auto;
    margin-bottom: 10px;
}

/*历史记录  */

.history-info {
    color: #999;
}

.info-title {
    font-size: 14px;
    padding: 15px 15px 10px 15px;
    border-bottom: 2rpx solid #f5f5f5;
}

.info-item {
    border-bottom: 2rpx solid #f1f1f1;
}

.info-text {
    padding: 10rpx 30rpx;
}

.info-text>view {
    padding: 10rpx;
}

.detail-text {
    padding-right: 30rpx;
}

swiper-item image {
    width: 100%;
}

.share-image {
    width: 40rpx;
    height: 40rpx;
}

.btn-hover {
    background: #80d2cd;
}

.text-right {
    text-align: right;
}

.wait-bg{
    padding: 10px 15px;
    margin-bottom: 60px;
}

.img-bg{
    width:100%;
    height:158px;
}
.wait-title{
    text-align:center;
    margin-top:-145px;
    color:#999;
}
.wait-content{
    text-align:center;
    margin-top:53px;
    color:#999;
}

.user-image{
    height: 20px;
    width: 20px;
    border-radius: 50%;
    margin-top:2px;
}
.view-user-image{
    width:20px;
    height:24px;
}
.list-space{
    padding: 10px 15px;
    display:flex;
    justify-content: space-between;
    align-items:center;
}
.user-name{
    width: 60px;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.product-name{
    width: 120px;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    text-align:right;
}
.item{
    background:#fff;
    font-size:12px;
    padding-top: 7px;
}