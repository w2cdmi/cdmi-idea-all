.account-recharge-container {
    overflow: hidden;
}

.account-recharge-common {
    display: flex;
    line-height: 80rpx;
    font-size: 32rpx;
    color: #333;
    padding-left: 30rpx;
}

.account-recharge-content {
    width: 90%;
    margin: 60rpx auto 40rpx;
    border: 1px solid #d3d3d3;
    border-radius: 12rpx;
}

.account-recharge-one {
    border-bottom: 1px solid #d3d3d3;
}

.account-recharge-common input {
    height: 80rpx;
    line-height: 80rpx;
    width: 350rpx;
}

.account-recharge-later {
    text-align: right;
    padding-right: 5%;
}

.account-recharge-later text{
    color: red;
}

.wx-recharge button{
    width: 90%;
    margin: 60rpx auto 0;
    background: #1FC3B3;
    color: #fff;
    font-size: 30rpx;
}
.wx-recharge-add button{
    opacity: 0.5
}