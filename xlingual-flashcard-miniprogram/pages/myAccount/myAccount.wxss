.account-bg {
    height: 100%;
    background: #f5f5f5;
}

.account-head-info, .account-head-left, .account-content-common,
.account-content-left, .account-content-right {
    display: flex;
}

.account-head-info {
    background: #fff;
    border-top: 1px solid #f1f1f1;
    justify-content: space-between;
}

.account-head-left image {
    width: 88rpx;
    height: 88rpx;
    padding: 15rpx 40rpx 15rpx 30rpx;
}

.account-head-left-right view:first-of-type {
    font-size: 36rpx;
    color: #333;
    line-height: 60rpx;
}

.account-head-left-right view:last-of-type {
    font-size: 28rpx;
    color: #666;
}

.account-head-right image {
    width: 44rpx;
    height: 44rpx;
    padding: 30rpx;
}

.white-bg {
    height: 20rpx;
    border-top: 1px solid #f1f1f1;
}

.account-content-one, .account-content-two, .account-content-three {
    background: #fff;
}

.account-content-common {
    justify-content: space-between;
    line-height: 100rpx;
    border-top: 1px solid #f1f1f1;
}

.account-content-left image {
    width: 44rpx;
    height: 44rpx;
    vertical-align: text-top;
    padding: 0 20rpx 0 30rpx;
}

.account-content-right image {
    width: 44rpx;
    height: 44rpx;
    vertical-align: text-top;
    padding: 0 30rpx 0 20rpx;
}

.account-content-left view {
    font-size: 32rpx;
    color: #333;
}

.account-content-right view {
    font-size: 28rpx;
    color: #666;
}
.account-content-right-info{
    max-width:130px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
/* 分享 */
.share-screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
}

.bg-color {
    background: transparent;
}

.drawer-screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}

.drawer_attr_box {
    width: 100%;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    background: #fff;
}

.share-draw-txt {
    text-align: center;
    color: #666;
    font-size: 26rpx;
    margin-top: 20rpx;
    height: 70rpx;
}

.cancel-txt {
    width: 100%;
    height: 90rpx;
    text-align: center;
    color: #333;
    font-size: 32rpx;
    line-height: 90rpx;
}

.share-drawer-attr-content {
    overflow-y: scroll;
    height: auto;
    background-color: #fafafa;
}

.share-draw-img {
    width: 121rpx;
    height: 186rpx;
    margin-left: 54rpx;
}
.wechat-friends {
    display: block;
    color: #333;
    font-size: 25rpx;
    font-weight: bold;
    margin-top: 15rpx;
    text-align: center;
}

.icon-contair {
    border-bottom: 1px solid #dcdcdc;
    height: 174rpx;
}

.drawer_attr_content {
    overflow-y: scroll;
}

.share-wechat-image {
    width: 100rpx;
    height: 100rpx;
    display: block;
    margin-left: 10rpx;
}
.share-btn {
    background: transparent;
    width: 100%;
    height: 100%;
    padding: 0px;
}

button::after {
    border: 0;
}