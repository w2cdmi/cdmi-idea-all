
page{
    overflow: hidden;
}

swiper {
    height: 862rpx;
}

.image-group {
    position: relative;
    display: flex;
    justify-content:center;
    align-items:center;
    background-color: white;
}

.image-group>view {
    display: flex;
    justify-content: space-around;
    width: 500rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -80rpx;
    margin-left: -250rpx;
}

.image-style {
    width: 100%;
    height: 750rpx;
}

.getImage-icon {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
}

.content {
    height: 220rpx;
    font-size: 30rpx;
    border-bottom: 1px solid #f1f1f1;
    border-top:1px solid #f1f1f1;
    background: #fff;
}
.content textarea{
    width: 80%;
    padding: 10rpx 0 0 10rpx;
    height: 90%;
}
.flex-item {
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.play-item {
    width: 100%;
    border-top: 2rpx solid #f1f1f1;
}

.control-btn {
    height: 100rpx;
    /* border-bottom: 2rpx solid #f1f1f1; */
    background: #fff;
    font-size: 35rpx;
    text-align: center;
}

.control-btn>view {
    width: 100%;
    justify-content: center;
}

.image-icon {
    width: 60rpx;
    height: 60rpx;
    margin: 0 20rpx;
}

/*底部语言显示  */

.flex-bottom {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    height: 100rpx;
    font-size: 35rpx;
}

.scroll-view-width {
    width: 100%;
}

.scroll-view-width-sm {
    width: 80%;
}

.scroll-view-style {
    width: 100%;
    white-space: nowrap;
}

.scroll-view-item {
    display: inline-block;
    width: 200rpx;
    border-right: 1rpx solid #f1f1f1;
    /* color: rgb(59, 204, 245); */
    color: #999;
    line-height: 100rpx;
    text-align: center;
    background: #fff;
}

.selected-item {
    color: rgb(59, 204, 245);
}

.flex-bottom>.share {
    background: rgb(17, 193, 243);
    color: #fff;
    height: 100%;
    width: 150rpx;
    text-align: center;
    line-height: 150rpx;
}

.flex-bottom>.share>button {
    background: #1fc3b3;
    color: #fff;
    height: 100%;
    width: 150rpx;
    text-align: center;
    line-height: 150rpx;
    font-size: 35rpx;
}

.flex-bottom>.test {
    background: #1fc3b3;
    color: #fff;
    height: 100%;
    width: 100%;
    text-align: center;
    line-height: 100rpx;
}

.maskLayer {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.3;
    overflow: hidden;
    z-index: 1000;
}

.choose {
    width: 150rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 2000;
    background: #000;
    margin: -280rpx 300rpx;
    text-align: center;
    line-height: 60rpx;
    opacity: 0.6;
    color: #fff;
    border-radius: 10rpx;
    word-spacing: 10rpx;
    letter-spacing: 4rpx;
}
@import "../template/sceneChoose.wxss";

.cut-img-container{
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 6666;
    background-color:#e5e5e5;
    top:0;
    bottom: 0; 
}
.canvas-content{
    background-color:rgba(0, 0, 0, 0.8);
}
.cropper-buttons{
    display: flex;
    justify-content: space-between;
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 6666;
    height: 100rpx;
    line-height: 100rpx;
    background: #fff;
}
.cropper-buttons view{
    width: 50%;
    text-align: center;
}
.cropper-buttons view:first-child{
    border-right: 1px solid #e5e5e5;
}