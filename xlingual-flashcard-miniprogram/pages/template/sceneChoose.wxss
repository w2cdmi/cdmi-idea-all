.scene-choose-content {
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 222;
}

.scene-choose-con-top {
    display: flex;
    justify-content: space-around;
    height: 50px;
    line-height: 50px;
    background: #fff;
    border-bottom:1px solid #ffffff;
}

.scene-choose-middle {
    width: 75%;
}

.scene-choose-middle-con {
    display: flex;
    justify-content: center;
}

.scene-choose-return, .scene-choose-menue {
    width: 10%;
}

.scene-name-title {
    max-width: 500rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.scene-choose-return image {
    width: 26rpx;
    height: 38rpx;
    vertical-align: text-top;
    padding-left: 15rpx;
}

.scene-choose-middle-opt {
    margin-left: 20rpx;
}

.scene-choose-middle-opt image {
    width: 20rpx;
    height: 15rpx;
    vertical-align: middle;
}

.scene-choose-menue image {
    width: 40rpx;
    height: 40rpx;
    vertical-align: text-top;
    padding-left: 15rpx;
}

.scene-choose-detail {
    width: 100%;
    background: #f5f5f5;
    position: absolute;
    border-top: 1px solid #f1f1f1;
    top: 102rpx;
    bottom: 0;
    z-index: 222;
}

.scene-choose-common {
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #f1f1f1;
    background: #fff;
    padding: 0 30rpx;
}

.scene-choose-common input {
    width: 70%;
    margin-left: 40rpx;
    height: 100rpx;
    line-height: 100rpx;
}

.scene-choose-common image {
    width: 44rpx;
    height: 44rpx;
    vertical-align: text-top;
}

.secne-choose-lang {
    justify-content: space-between;
}

.scene-choose-langs {
    display: flex;
}

.scene-choose-catory {
    width: 70%;
    margin-left: 100rpx;
}

.scene-choose-langs-title {
    max-width: 130px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.card-operate-container {
    width: 100%;
    /* height: 100%; */
    border-top: 1px solid #f1f1f1;
    background: #f5f5f5;
    position: absolute;
    top: 102rpx;
    bottom: 0;
    z-index: 222;
}

.card-operate-tab {
    display: flex;
    justify-content: space-around;
    height: 50px;
    line-height: 50px;
    border: 1px solid #b2b2b2;
    width: 96%;
    margin: auto;
    border-radius: 8rpx;
    margin-top: 10px;
}

.card-operate-tab view {
    width: 50%;
    text-align: center;
}
.card-lang-info view{
    height: 40rpx;
}
.card-delete {
    border-right: 1px solid #b2b2b2;
}

.card-content-detail {
    display: flex;
}

.card-img image {
    width: 160rpx;
    height: 160rpx;
    border:1px solid #f1f1f1
}

.delete-card, .card-sort {
    align-self: center;
}
.delete-card{
    margin-right: 22rpx;
}
.card-sort{
    margin-left: 20rpx;
    width: 62rpx;
}
.delete-card image {
    width: 60rpx;
    height: 60rpx;
}

.card-sort image {
    width: 60rpx;
    height: 60rpx;
    border:1px solid #e2e2e2;
}

.card-content-detail {
    background: #fff;
    padding: 15rpx 20rpx;
    border-bottom: 1px solid #f1f1f1;
}

.card-content-right {
    margin-left: 30rpx;
    width: 60%;
    display: flex;
}

.add-bg{
    background: #e5e5e5;
}
.card-lang-info-lang view{
    max-width: 150rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.card-lang-info-word view{
    max-width: 300rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}