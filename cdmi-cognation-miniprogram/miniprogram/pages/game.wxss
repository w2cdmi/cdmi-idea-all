/* miniprogram/pages/index.wxss */

page {
    height: 100%;
    width: 100%;
}

.content {
    margin: 2px;
}

.grid {
    display: flex;
    flex-direction: row;
    background-color: #f7f7f7;
}

.row {
    background-color: #f7f7f7;
}

.row .item {
    background-color: #eee;
    border: 1px solid red;
    text-align: center;
    font-size:small;
}

.input-pop {
  
}
.input-panel {
    display: flex;
    flex-direction: row; 
    align-content: flex-start;
    background-color: #666;
    justify-content:flex-start;
    flex-wrap: wrap;
}
.input-item {
  box-sizing:border-box;
  -moz-box-sizing:border-box; /* Firefox */
  -webkit-box-sizing:border-box; /* Safari */
    background-color: #eee;
    border: 1px solid red;
}

.switch {
    position: fixed;
    left: 0;
    top: 0;
    display: flex;
    flex-direction: column;
}

.switch .button {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 32rpx;
    background-color: red;
    border-bottom-right-radius: 20rpx;
    border-top-right-radius: 20rpx;
    padding: 5rpx 20rpx;
    color: white;
    text-align: center;
}

.switch .text {
    padding: 5rpx 20rpx;
    font-size: 24rpx;
    text-align: center;
}
