.modal-mask-white {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #333;
    opacity: 0.4;
    overflow: hidden;
    z-index: 8;
}
.menu-panel{
    display: flex;
    align-items: center;
    background:#fff;
    z-index:9;
    position:fixed;
    width:100%;
    bottom:102rpx;
    height:100%;
}
.menu-group{
    width:100%;
    display:flex;
    flex-wrap:wrap;
}
.menu-panel .menu-group view{
    width:33.33%;
    display:flex;
    flex-direction:column;
    justify-content:center;
    align-items:center;
    margin-bottom:20px;
}
.menu-panel view text{
    margin-top: 20rpx;
    width: 100%;
    text-align: center;
    color: #333;
}
.menu-panel image{
    width: 120rpx;
    height: 120rpx;
}
.close-menu{
    display: flex;
    justify-content:center;
    background:#fff;
    border-top:1px solid #f1f1f1;
    z-index:9;
    position:fixed;
    width:100%;
    bottom:0;
    height:100rpx;
    align-items:center;
}
.close-menu image{
    width: 30rpx;
    height: 30rpx;
}