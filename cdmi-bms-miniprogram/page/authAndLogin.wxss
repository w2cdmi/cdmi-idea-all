/* page/authAndLogin.wxss */
.page{
    background: #fff;
}
.option-group{
    width: 78%;
    margin: 0 auto;
}
.btn {
    width: 100%;
    height: 80rpx;
    background-color: #ea5036;
    color: #fff;
    margin-top: 30rpx;
    font-size: 32rpx;
    line-height: 80rpx;
    border-radius: 1.5em;
    text-align: center;
    border: 1px solid #ea5036;
    font-weight: bold;
}
.btn::after{
    border: none;
}
.exit-btn{
    background: #fff;
    color: #ea5036;
}
.title{
    color: #333;
    padding-top: 50rpx;
    font-size: 36rpx;
    text-align: center;
    font-weight: bold;
    padding-bottom:10rpx;
}
.description{
    font-size: 28rpx;
    color: #666;
    display: flex;
    width:78%;
    margin:0 auto;
    padding:8rpx 0;
}
.description view:nth-child(1){
    width: 40%;
}
.description view:nth-child(2){
    width: 60%;
}
