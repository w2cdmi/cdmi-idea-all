.operation-menu {
    position: absolute;
    z-index: 10;
    background: #fff;
    box-shadow: 2px 2px 2px 2px #e5e5e5;
    width: 300rpx;
    top: 20px;
    left: 20px;
}

.operation-menu view {
    padding: 10px;
    font-size: 14px;
    letter-spacing:2px;
}

.modal-mask-white {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #fff;
    opacity: 0;
    overflow: hidden;
    z-index: 9;
}
