/* 整体页面样式 */

page {
    height: 100%;
    margin: 0;
    background-color: #f5f5f5;
    font-size: 28rpx;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

/* 页面布局 */

.page {
    height: 100%;
    width: 100%;
    background: #f5f5f5;
    font-size: 28rpx;
    margin: 0;
    overflow-x: hidden;
}

.view-bg {
    background: #fff;
    padding: 20rpx 30rpx;
}

.view-up-down-space {
    padding: 20rpx 0;
}

.font-big {
    font-size: 28rpx;
}

.font-middle {
    font-size: 26rpx;
    color: #666;
}

.font-small {
    font-size: 24rpx;
    color: #999;
}

.cell_2 {
    width: 100%;
    /* height: 100rpx; */
    background: #fff;
    position: relative;
    overflow-x: scroll;
    overflow-y: hidden;
    /* border-bottom: 1rpx solid #ececec; */
}

/* 背景样式 */

.blankBackground {
    position: relative;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
    height: 230px;
}

.blankBackground image {
    width: 250px;
    height: 200px;
    position: relative;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
}

.blankBackground view {
    color: #a9a9a9;
    text-align: center;
}

/* 清掉button样式 */

.clear-button-style {
    padding: 0;
    background: #fff;
    border: none;
    margin: 0;
}

.clear-button-style::after {
    border: none;
}

/*点击按钮背景色*/

.button-hover {
    background: #f5f5f5;
}

/* 按钮 */

.view-button {
    font-size: 28rpx;
    margin-bottom: 30rpx;
    padding: 20rpx 30rpx;
    background: #ea5036;
    padding-left: 30rpx;
    text-align: center;
    color: #fff;
    margin: 30rpx 30rpx;
    border-radius: 10rpx;
}

.sure-button {
    font-size: 28rpx;
    text-align: center;
    margin: 20rpx 30rpx;
    background: #ea5036;
    height: 40px;
    line-height: 40px;
    border-radius: 5px;
    color: #fff;
}

/* LoadingMore  */

.loadmore {
    width: 65%;
    margin: 0 auto;
    line-height: 1.6em;
    font-size: 24rpx;
    text-align: center;
}

.loadmore-tips {
    display: inline-block;
    vertical-align: middle;
}

.loading {
    margin: 0 5px;
    width: 20px;
    height: 20px;
    display: inline-block;
    vertical-align: middle;
    -webkit-animation: weuiLoading 1s steps(12, end) infinite;
    animation: weuiLoading 1s steps(12, end) infinite;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
}

.loadmore-line {
    border-top: 1px solid #e5e5e5;
    margin-top: 40rpx;
}

.loadmore-tips-in-line {
    position: relative;
    top: -0.9em;
    padding: 0 0.55em;
    background-color: #fff;
    color: #999;
}


