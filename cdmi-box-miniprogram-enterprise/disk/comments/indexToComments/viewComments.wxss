/* disk/comments/indextocomments/viewcomments.wxss */

page {
    background-color: #f8f8f8;
}

.all_contair {
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid rgba(9, 9, 9, 0.2);
    display: flex;
}

.loadMore {
    height: 87rpx;
    text-align: center;
    line-height: 87rpx;
    color: #999;
    margin-bottom: 20rpx;
}

.avatar_img {
    width: 78rpx;
    height: 78rpx;
    border-radius: 50%;
}

.comment_txt {
    margin-left: 20rpx;
}

.file_info_contair {
    float: right;
}

.time_txt {
    margin-top: 9rpx;
}

.con_contair {
    float: left;
}

.cotent_txt {
    display: block;
    color: #333;
    font-size: 28rpx;
    margin-top: 20rpx;
    width: 470rpx;
    white-space: normal;
    word-wrap: break-word;
    word-break: break-all;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.content-style{
     display: flex;
     justify-content: space-between;
     width: 630rpx;
}

.file_image_size {
    width: 110rpx;
    height: 102rpx;
    overflow: hidden;
}

.vip_icon {
    width: 18rpx;
    height: 15rpx;
    display: inline-block;
    margin-left: 10rpx;
}

.file_title {
    margin-top:4rpx;
}

.comm_txt {
    font-size: 26rpx;
    display: block;
    color: #999;
    width: 120rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.red-heart{
    width: 30rpx;
    height: 30rpx;
}
