/* disk/inbox/inbox.wxss */

.page {
    overflow: hidden;
}

/*文件列表  */

.scroll-view-Height {
    height: 1050rpx;
}

.scroll-view-width {
    white-space: nowrap;
    overflow: hidden;
    height: 120rpx;
}

.folder-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 118rpx;
    background: #fff;
    border-bottom: 2rpx solid #f1f1f1;
}

.folder-inline {
    display: inline-block;
    width: 750rpx;
}

.folder-item-flex {
    display: flex;
    align-items: center;
}

.folder-icon {
    width: 90rpx;
    height: 90rpx;
    padding: 0 25rpx 0 40rpx;
}

.folder-name {
    font-size: 30rpx;
    color: #333;
    margin-bottom: 10rpx;
}

.folder-info {
    font-size: 24rpx;
    color: #999;
}

/*三个原点  */

.dept-more {
    width: 118rpx;
    height: 118rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.plug_icon {
    width: 8rpx;
    height: 44rpx;
}

.plug_icon_blank {
    width: 5rpx;
    height: 25rpx;
    position: absolute;
    top: 8rpx;
}

/*圆点唤起的层  */

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}

.drawer_attr_box {
    width: 100%;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    background: #f4f4f4;
}

.cancel_view {
    height: 100rpx;
    line-height: 100rpx;
}

.margin-bottom {
    margin-bottom: 20rpx;
}

.draw_view_content_comm {
    width: 100%;
    height: 90rpx;
    background-color: #fff;
    margin-bottom: 2rpx;
    line-height: 90rpx;
    text-align: center;
    font-size: 30rpx;
    border-bottom: 2rpx solid #f1f1f1;
    border: none;
}

/*删除  */

.deleteFolder {
    display: inline-block;
    background: #ea5036;
    color: #fff;
    font-size: 35rpx;
    text-align: center;
    height: 120rpx;
    width: 200rpx;
    line-height: 120rpx;
    position: absolute;
}

/*空文件  */

.blank-file {
    margin-top: 230rpx;
}

.blank-item {
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.blank-tip {
    margin: 40rpx 0;
    color: #333;
    opacity: 0.5;
}

.blank-image {
    width: 252rpx;
    height: 200rpx;
}

.blank-title {
    color: #333;
    margin-left: 25rpx;
    font-size: 26rpx;
}

.blank-text {
    font-size: 26rpx;
    color: #666;
    margin: 10rpx auto;
    width: 600rpx;
    position: relative;
}

/*新建文件夹错误提示  */

.modal-error-text {
    text-align: center;
    height: 180rpx;
    font-size: 34rpx;
    line-height: 180rpx;
}

.btn-iKnow {
    text-align: center;
    border-top: 1px solid #dedede;
    height: 86rpx;
    font-size: 34rpx;
    line-height: 86rpx;
    color: #ea5036;
}

/*新建收件箱按钮  */

.add-btn {
    width: 690rpx;
    height: 88rpx;
    line-height: 88rpx;
    color: #fff;
    background: #ea5036;
    position: absolute;
    bottom: 40rpx;
    left: 30rpx;
    text-align: center;
    border-radius: 10rpx;
}
@import "../template/createFolder.wxss";
