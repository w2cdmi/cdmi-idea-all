/* disk/enterprise/template/selectEmploye.wxss */
.page{
    overflow: hidden;
}

.department-title {
    height: 60rpx;
    line-height: 60rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.serach-bg {
    background: #f5f5f5;
    display: flex;
}

.view-serach-icon {
    height: 38rpx;
}

.search-input-bg {
    background: #fff;
    border-radius: 1.5em;
    height: 70rpx;
    width: 480rpx;
    display: flex;
    align-items: center;
    padding-left: 32rpx;
}

.serach-icon {
    width: 38rpx;
    height: 38rpx;
}

.show-serach {
    width: 20rpx;
    height: 20rpx;
    margin-left:6rpx;
}
.serach-input{
    width:400rpx;
    margin-left:14rpx;
}
.serach-department-view{
    display:flex;
    align-items:center;
    margin-left:14rpx;
    width: 180rpx;
    justify-content:center;
}


.company-name{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.department-list{
    color: #666;
    border-bottom: 1px solid #f5f5f5;
}
.border-bottom{
    border-bottom: 1px solid #f5f5f5;
}
.department-group{
    padding: 20rpx 30rpx;
    display: flex;
    align-items:center;
    background:#fff;
}
.img-icon{
    height:40rpx;
    width:40rpx;
}
.margin-right{
    margin-right:20rpx;
}
.view-select-icon{
    height:40rpx;
}
.department-info{
    display:flex;
    align-items:center;
}
.department-icon{
    width:90rpx;
    height:90rpx;
    border-radius:50%;
}
.dpt-name{
    font-size: 28rpx;
    height: 50rpx;
    line-height: 50rpx;
}
.department-description{
    font-size:26rpx;
    color:#666;
    height: 40rpx;
    line-height: 40rpx;
}
.sure-button{
  background-color: #EA5036;
  color: #fff;
  width: 690rpx;
  height: 88rpx;
  font-size: 16px;
}

.view-department-icon{
    height:90rpx;
}

/* 公司筛选  */
.select-department {
    height: 1334rpx;
    width: 750rpx;
    position: absolute;
    bottom: 0;
    background: rgba(0,0,0,0.5);
}
.select-department-item{
    height: 832rpx;
    width: 750rpx;
    position: absolute;
    bottom: 0;
    background: #fff;
}

.selected-department-title {
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    width: 100%;
    color: #333;
}

.flex-item {
    display: flex;
    /* padding:0px 15px; */
    background: #fff;
    margin-top: 20rpx;
}

.sure-select {
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    padding-right: 15px;
}

.cancel-select {
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    padding-left: 36rpx;
}

.scroll-view_H {
    white-space: nowrap;
}
.scroll-view_Y{
    height: 676rpx;
}

.department-item {
    height:66rpx;
    line-height:66rpx;
    width: 220rpx;
    display: inline-block;
    text-align: center;
    border-bottom: 4rpx solid transparent;
}

.department2-item {
    height:66rpx;
    line-height:66rpx;
    display: flex;
    width: 750rpx;
    text-align: center;
    border-bottom: 4rpx solid transparent;
}


.selected-department-item {
    border-bottom: 4rpx solid #ea5036;
}

.sure-select-icon {
    width: 24rpx;
    height: 20rpx;
}

