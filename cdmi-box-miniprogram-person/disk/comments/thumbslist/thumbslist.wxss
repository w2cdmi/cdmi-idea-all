view {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:host {
    width: 100%;
    height: 100%;
}

.list {
    width: 100%;
    height: 100%;
}

.list .item:not(:nth-last-of-type(1)) {
    border-bottom: 1px solid rgba(51, 51, 51, 0.1);
}

.list .item {
    width: 100%;
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding-left: 30rpx;
    background: #fff;
}

.list .item .heade {
    width: 90rpx;
    height: 90rpx;
    overflow: hidden;
}

.list .item .heade image {
    width: 90rpx;
    height: 90rpx;
}

.list .item .userinfo {
    padding: 0 20rpx 0 20rpx;
}

.name-text {
    padding-bottom: 15rpx;
}

.grade {
    width: 29rpx;
    height: 23rpx;
    margin-left: 20rpx;
}

.list .item .userinfo view:nth-of-type(1) text {
    font-family: SourceHanSansCN-Normal;
    color: rgba(51, 51, 51, 1);
    line-height: 33rpx;
}

.list .item .userinfo view:nth-of-type(2) text {
    margin-top: 15rpx;
    font-size: 26rpx;
    font-family: SourceHanSansCN-Normal;
    color: rgba(153, 153, 153, 1);
    line-height: 24rpx;
}
