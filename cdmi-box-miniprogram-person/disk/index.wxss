@import "template/fileList.wxss";

/*微信备份  */

.weixinBackups {
    height: 80rpx;
    background: #fff;
    border-bottom:1px solid #f1f1f1;
}

.flex-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.weixin-image {
    width: 40rpx;
    height: 40rpx;
    margin: 0 20rpx 0 30rpx;
    border-radius: 50%;
}

.music-play-icon{
    width: 40rpx;
    height: 40rpx;
    margin: 0 20rpx 0 30rpx;
}

.weixin-text {
    color: #333;
    font-size: 26rpx;
    height:40rpx;
    line-height:40rpx;
}

.recentlyViewed-image {
    width: 34rpx;
    height: 34rpx;
    margin: 0 20rpx 0 30rpx;
}

.shortcutFolder-image {
    width: 34rpx;
    height: 34rpx;
    margin: 0 15rpx 0 30rpx;
}

.arrow-image {
    width: 10rpx;
    height: 18rpx;
    margin: 0 30rpx 0 20rpx;
}

/*最近浏览  */

.recentlyViewed {
    margin-top: 20rpx;
}

.title-text {
    color: #333;
    font-size: 28rpx;
}

.recentlyViewed-title {
    background: #fff;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 2rpx solid #f1f1f1;
}

.file-item{
    margin-top: 20rpx;
}
.file-panel-title{
    height:40px;
    background:#fff;
    border-bottom:1px solid #f1f1f1;
    display: flex;
    justify-content:space-between;
    align-items:center;
}

.file-panel-title > view{
    display:flex;
    align-items:center;
}

/*快捷文件夹  */

.shortcutFolder {
    margin-top: 20rpx;
}

.folderIcon {
    width: 64rpx;
    height: 72rpx;
    margin: 0 25rpx 0 40rpx;
}

.nodeName {
    font-size: 30rpx;
    color: #333;
}

.ownerName {
    color: #999;
    font-size: 24rpx;
    margin-top: 15rpx;
}

.share-view {
    height: 130rpx;
    width: 15%;
}

.folder-item {
    width: 85%;
    justify-content: flex-start;
}

.share-btn {
    height: 130rpx;
    width: 130rpx;
    justify-content: center;
    background-color: transparent;
}

.share-btn::after {
    border: none;
}

.share-icon {
    width: 40rpx;
    height: 40rpx;
}

.blankContainer {
    padding: 20rpx 0;
    background: #fff;
}

.blank-icon {
    width: 100px;
    height: 100px;
    position: relative;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
}

.blank-text {
    color: #a9a9a9;
    text-align: center;
}

.blank-folder-text {
    color: #a9a9a9;
    padding-left: 40rpx;
}

.plug_icon {
    width: 8rpx;
    height: 44rpx;
    padding: 0 15rpx;
}

.tip_view {
    background-color: #fff;
    border-radius: 1.5em;
    width: 220rpx;
    height: 50rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    /* margin-bottom: 20rpx; 当有消息时，消息VIvE严重不居中*/ 
    display: flex;
    align-items:center;
}

.tip_img {
    width: 50rpx;
    height: 50rpx;
    float: left;
    border-radius: 1.5em;
}

.tip_txt {
    display: inline-block;
    font-size: 26rpx;
    margin-left: 20rpx;
    line-height: 50rpx;
}

.image-icon{
    width: 20rpx;
    height: 20rpx;
    margin-left:20rpx;
}

.navbar{
    background: #fff;
    box-shadow:4px 2px 2px #F5F5F5;
    position:absolute;
    top:0px;
    z-index:5;
    width:100%;
    display:-webkit-box;
}
.navbar-item{
    position:relative;
    display:block;
    -webkit-box-flex:1;
    -webkit-flex:1;
    flex:1;
    padding:5px 0;
    text-align:center;
    font-size:0;
}
.navbar-item > image{
    width:57px;
    height:57px;
}
.navbar-title{
    display:inline-block;
    font-size:28rpx;
    max-width:8em;
    width:100%;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
    word-wrap:normal;
}
.navbar-item.bar-item-on{
    color:#585351;
    background:#FEF9F6;
}
.tab-panel{
  box-sizing: border-box;
  height: 100%;
  padding-top: 50px;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}
.main{
    width: 100%;
    margin:0;
    padding-bottom: 50px;
}
.file-group{
    border-bottom:1px solid #f5f5f5;
}
.folderList {
    height: 130rpx;
    width: 930rpx;
    display: flex;
    align-items: center;
    background: #fff;
    border-bottom: 2rpx solid #f1f1f1;
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
}
.blankContainer {
    padding: 20rpx 0;
    background: #fff;
}
.blank-icon{
    width: 100px;
    height: 100px;
}
.music-name{
    margin-left:20rpx;
    width:400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.view-image{
    height: 40rpx;
}
.title-view-image{
    height: 34rpx;
    display:flex;
}
