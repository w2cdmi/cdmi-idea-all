}

.blank-bg {
    text-align: center;
    width: 198rpx;
    height: 198rpx;
}

.share-button {
    text-align: center;
    background: #ea5036;
    height: 40px;
    line-height: 40px;
    border-radius: 5px;
    font-size: 28rpx;
    color: #fff;
    position: relative;
    width: 90%;
    margin: 0 auto;
    margin-top: 140rpx;
    margin-bottom: 61rpx;
}

.number-code {
    letter-spacing: 4rpx;
}

.blank-img {
    width: 198rpx;
    height: 198rpx;
}

.img {
    width: 198rpx;
    height: 198rpx;
}

.copy-code {
    background-color: #f1f1f1;
    justify-content: center;
    border-radius: 10rpx;
    color: #666;
    height: 40rpx;
    line-height: 40rpx;
}

.select-file-name {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

radio {
    width: 48rpx;
}

radio .wx-radio-input {
    border-radius: 50%;
    width: 30rpx;
    height: 30rpx;
    margin-right: 50rpx;
}

radio .wx-radio-input.wx-radio-input-checked {
    border: 1px solid #1d97ff;
    background: #1d97ff;
}

radio .wx-radio-input.wx-radio-input-checked::before {
    border-radius: 50%;
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    font-size: 26rpx;
    color: #fff;
    background: transparent;
    transform: translate(-50%, -50%) scale(1);
    -webkit-transform: translate(-50%, -50%) scale(1);
}

.share-screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
}

.bg-color {
    background: transparent;
}

.drawer-screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}

.drawer_attr_box {
    width: 100%;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    background: #fff;
}

.share-draw-txt {
    text-align: center;
    color: #666;
    font-size: 26rpx;
    margin-top: 20rpx;
    height: 70rpx;
}

.cancel-txt {
    width: 100%;
    height: 90rpx;
    text-align: center;
    color: #333;
    font-size: 32rpx;
    line-height: 90rpx;
}

.share-drawer-attr-content {
    overflow-y: scroll;
    height: auto;
    background-color: #fafafa;
}

.share-draw-img {
    width: 121rpx;
    height: 186rpx;
    margin-left: 54rpx;
}

.wechat-friends {
    display: block;
    color: #333;
    font-size: 25rpx;
    font-weight: bold;
    margin-top: 15rpx;
    text-align: center;
}

.icon-contair {
    border-bottom: 1px solid #dcdcdc;
    height: 174rpx;
}

.drawer_attr_content {
    overflow-y: scroll;
}

.share-wechat-image {
    width: 100rpx;
    height: 100rpx;
    display: block;
    margin-left: 10rpx;
}
