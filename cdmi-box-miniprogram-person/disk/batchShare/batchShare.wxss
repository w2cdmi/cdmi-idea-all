    background: rgba(0, 0, 0, 0.3);
}

.bottom-view {
    position: absolute;
    width: 100%;
    height: 273rpx;
    bottom: 0;
    background-color: #fff;
    z-index: 20;
}

.select-icon {
    height: 30rpx;
    width: 30rpx;
}

.default-ele {
    width: 90%;
    display: flex;
}

.flug-icon {
    width: 11rpx;
    height: 22rpx;
    right: 8px;
    position: absolute;
    top: 9rpx;
}

.plug-view {
    position: absolute;
    right: 0;
}

.page-height {
    min-height: 78%;
