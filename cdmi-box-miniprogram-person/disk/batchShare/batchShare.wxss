}

.default-title {
    width: 115rpx;
}

.default-txt {
    color: #999;
}

.default-line {
    margin-top: 20rpx;
}

.sharePerson {
    height: 30px;
    width: 30px;
}

.share-txt {
    bottom: 46rpx;
    color: #ea5036;
    z-index: 21;
    display: flex;
    align-items: center;
    width: auto;
}

.share-btn {
    background: transparent;
    width: 100%;
    height: 100%;
    padding: 0px;
}

button::after {
    border: 0;
}

.view-input {
    border-bottom: 1px solid #f1f1f1;
    padding-bottom: 20rpx;
    min-height: 457rpx;
    position: relative;
    background-color: #fff;
}

.view-input input {
    background: #f8f8f8;
    padding: 0 20rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 5px;
}

.input-class {
    font-size: 34rpx;
    color: rgba(3, 3, 3, 0.4);
}

.item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #f1f1f1;
    height: 47rpx;
}

.item-view {
    background-color: #f4f4f4;
    width: 100%;
    height: 129rpx;
    text-align: center;
    bottom: 0px;
}

.confirm-button {
    background-color: #fff;
    width: 100%;
    height: 100rpx;
    left: 0px;
    position: absolute;
    bottom: 0px;
    line-height: 100rpx;
}

.view-select {
    display: flex;
    align-items: center;
    margin-left: 17px;
    width: 160rpx;
}

.view-default {
    display: flex;
    align-items: center;
    margin-left: 17px;
}

.share-title {
    width: 140rpx;
}

.view-select view {
    padding-right: 10rpx;
    line-height: 30rpx;
}

.view-dotted {
    border-radius: 10rpx;
    align-items: center;
    justify-content: center;
    background-color: white;
    min-height: 238rpx;
}

.select-files-box {
    position: relative;
    overflow: hidden;
    padding: 20rpx;
}

.textarea {
    width: 100%;
    height: 75px;
    margin-top: 34rpx;
    font-size: 34rpx;
}

.select-files-box > view {
    height: 264rpx;
    width: 33%;
    position: relative;
    flex-direction: column;
    align-items: center;
    text-align: center;
    float: left;
}

.delete-file-img {
    width: 38rpx;
    height: 38rpx;
    position: absolute;
    margin-left: -76rpx;
    margin-top: -58rpx;
}

.bottom-page {
    margin-top: 20rpx;
}

.view-dotted image {
    width: 100rpx;
