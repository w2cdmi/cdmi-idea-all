@import "../template/menu.wxss";
@import "/components/actionsheet/actionsheet.wxss";

.view-bg {
    padding: 20rpx 0 20rpx 30rpx;
}

.file-group {
    width: 100%;
    background: #fff;
}

.file_tool_item {
    padding-left: 10px;
}

.crumbshide {
    display: none;
}

.file_tool_order_item {
    padding-left: 5px;
}

::-webkit-scrollbar {
    /*隐藏滚轮*/
    display: none;
}

.file_tool image {
    width: 12px;
    height: 12px;
}

.weui-flex {
    overflow: scroll;
}

.searchPage {
    width: 100%;
    position: absolute;
    top: 44px;
    background-color: white;
}

/*面包屑*/

#breadcrumb {
    width: 100%;
    background: #fff;
    /* overflow: scroll; */
    display: -webkit-box;
    display: inline-flex;
    padding-left: 10rpx;
    border-bottom: 1px solid #f5f5f5;
    height: 41px;
}

#breadcrumb .icon {
    font-size: 14px;
}

#breadcrumb .crumb-name {
    display: inline-flex;
}

#breadcrumb .crumb-name image {
    width: 15px;
    height: 40px;
    float: left;
}

#breadcrumb .crumb-name .item {
    float: left;
    background: #fff;
    text-decoration: none;
    position: relative;
    height: 41px;
    line-height: 41px;
    padding: 0 10px 0 10px;
    text-align: center;
}

#breadcrumb .crumb-name .item text {
    float: left;
    max-width: 200rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

#breadcrumb .crumb-name:last-child .item {
    color: #000;
}

.sort-view {
    position: absolute;
    top: 73rpx;
    right: 55rpx;
    font-size: 26rpx;
    z-index: 999;
}

.sort-menu {
    width: 91%;
    line-height: 52rpx;
    background-color: #fff;
    box-shadow: 10rpx 10rpx 20rpx 1rpx rgba(3, 3, 3, 0.3);
    border-radius: 0.5em;
    padding: 17rpx;
    height: 69%;
}

.sort-gg {
    border: solid transparent;
    border-bottom-color: #fff;
    border-width: 12rpx;
    border-top-width: 0;
    background: Transparent;
    left: 168rpx;
    position: absolute;
    top: -9rpx;
}

.sort-img {
    width: 20rpx;
    height: 20rpx;
    display: inline-block;
}

.sort-text {
    display: inline-block;
}

.sort_btn {
    width: 21px;
    height: 20px;
    margin-top: 3px;
    padding-left: 10px;
    font-size: 14px;
    color: #ea5036;
}

/* 搜索框 */

.search-bar {
    position: relative;
    padding: 8px 10px;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    box-sizing: border-box;
    background-color: transparent;
    height: 44px;
}

.search-bar-form {
    position: relative;
    -webkit-box-flex: 1;
    -webkit-flex: auto;
    flex: auto;
    border-radius: 5px;
    background: transparent;
}

.search-bar-box {
    position: relative;
    padding-left: 30px;
    padding-right: 30px;
    width: 100%;
    box-sizing: border-box;
    z-index: 1;
    border-radius: 59px;
    overflow: hidden;
    background-color: #fff;
    float: left;
}

.icon-search-in-box {
    position: absolute;
    left: 10px;
    top: 7px;
}

.search-bar-input {
    height: 28px;
    line-height: 28px;
    font-size: 28rpx;
}

.sort-menu view {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
