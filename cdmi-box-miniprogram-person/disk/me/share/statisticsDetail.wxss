.avatar-img{
    width:34rpx;
    height:28rpx;
    margin-top:14rpx;
    margin-left:12rpx;
}
.item{
    display:flex;
    justify-content:space-between;
    align-items:center;
    border-bottom: 1px solid #e5e5e5;
    padding: 20rpx 0;
}
.left{
    display:flex;
    align-items:center;
}
.view-avatar-img{
    height:60rpx;
    width:60rpx;
    background:#f5f5f5;
    border-radius:1.5em;
    margin-right:16rpx;
}
.detail-group{
    margin-top:20rpx;
}
.me-level-detail{
    display:flex;
    justify-content:space-between;
    width:94%;
    margin: 20rpx 0;
}
.view-big-level-img{
    height: 120rpx;
    width:120rpx;
    border-radius:50%;
    background:#f5f5f5;
    margin-top:20rpx;
}
.view-big-level-img image{
    height: 70rpx;
    width: 100rpx;
    margin-top:28rpx;
    margin-left:10rpx;
}
.me-detail-bottom{
    display:flex;
    flex-direction:column;
    align-items:center;
    background:#fff; 
    position:fixed;
    bottom:0;
    width:100%;
}
.view-bg{
    padding:0 30rpx;
}
.view-bg .item:last-child{
    border: none;
}
