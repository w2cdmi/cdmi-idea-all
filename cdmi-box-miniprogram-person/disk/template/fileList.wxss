/* 标签样式 */

label {
    display: block;
    line-height: 50rpx;
    height: 50rpx;
    overflow: hidden;
    width: 500rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: left;
    font-size: 28rpx;
}

.file-info text {
    font-size: 24rpx;
    color: #999;
    display: block;
    height: 40rpx;
    line-height: 40rpx;
}

