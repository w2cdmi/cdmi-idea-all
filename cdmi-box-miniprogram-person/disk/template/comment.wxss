/* 点赞面板 */
.thumb {
    padding: 20rpx 20rpx;
    background: #fff;
    border-bottom: 1px solid #f1f1f1;
}

.thumb .btn {
    margin-top: 10rpx;
    display: inline-block;
    width: 100%;
    margin-bottom: 10rpx;
}

.thumb button {
    background: #ff7043;
    width: 180rpx;
    margin: 0 auto;
    color: rgba(255, 255, 255, 1);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 22rpx;
}

.thumb .num {
    text-align: center;
    font-size: 24rpx;
}

.praise {
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 150rpx;
    height: 60rpx;
    margin: 0 auto;
    border-radius: 30rpx;
    box-sizing: border-box;
    font-size: 24rpx;
}

.praise image {
    width: 23rpx;
    height: 23rpx;
    margin: -3rpx 10rpx 0 0;
}

.portrait {
    overflow: hidden;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    margin-top: 10rpx;
}

.portrait .head-portrait {
    width: 70rpx;
    height: 70rpx;
    float: left;
    border-radius: 50%;
    overflow: hidden;
}

.head-portrait+.head-portrait {
    margin-left: 5px;
}

.portrait .head-portrait image {
    width: 70rpx;
    height: 70rpx;
}

/* 评论 */
.comment-count {
    padding-top: 30rpx;
    padding-left: 30rpx;
}
.comment {
    float: left;
    width: 100%;
    overflow: hidden;
    background-color: #fff;
    box-sizing: border-box;
    padding-bottom: 120rpx;
}
.comment .comment-lists {
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding-top: 40rpx;
}

.comment .comment-lists .portrait {
    width: 70rpx;
    height: 70rpx;
    margin-right: 20rpx;
    margin-left: 30rpx;
    border-radius: 50%;
}

.comment .comment-lists .info {
    flex: 1;
}

.comment .comment-lists .info .info-user {
    margin-bottom: 10rpx;
}

.comment .comment-lists .info .username {
    color: #999;
    font-size: 26rpx;
}

.comment-message {
    font-size: 28rpx;
    word-wrap: break-word;
    word-break: break-all;
    margin-right: 30rpx;
    line-height: 36rpx;
}

.comment-reply .reply .reply-message {
    font-size: 26rpx;
    word-wrap: break-word;
    word-break: break-all;
    margin-right: 10rpx;
    line-height: 36rpx;
}

.comment .comment-lists .comment-info-times-count {
    display: flex;
    justify-content: space-between;
    margin-top: 10rpx;
    height: 34rpx;
    align-items: center;
}

.comment-info-times-count text {
    color: #999;
    font-size: 24rpx;
    line-height: 24rpx;
}

.comment .comment-lists .comment-info-times-count .count {
    display: flex;
    align-items: center;
    float: left;
    margin-right: 70rpx;
}

.comment .comment-lists .comment-info-times-count .count image {
    height: 24rpx;
    width: 28rpx;
}

.count-msg {
    float: right;
    display: flex;
    justify-content: flex-end;
    margin-right: 60rpx;
}

.count-msg image {
    margin-right: 10rpx;
}

.comment .comment-lists .comment-info-times-count .msg {
    display: flex;
    align-items: center;
}

.comment .comment-lists .comment-info-times-count .msg image {
    height: 24rpx;
    width: 28rpx;
}

.comment-reply {
    word-wrap: break-word;
    word-break: break-all;
    padding-bottom: 20rpx;
}

.reply {
    display: flex;
}

.comment-reply .reply text {
    font-size: 20rpx;
}

.comment-reply .reply .message {
    font-size: 33rpx;
    word-wrap: break-word;
    word-break: break-all;
    margin-right: 33px;
}

.comment-reply .reply .username {
    color: #5176ab;
    float: left;
    margin-right: 10rpx;
}

.reply-all {
    font-size: 24rpx;
    padding-bottom: 10rpx;
}
/* 发送按钮 */
.input {
    width: 100%;
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: center;
    background: #fff;
    padding: 20rpx 30rpx;
    box-shadow: 3px 3px 5px #999;
}

.input input {
    width: 510rpx;
    height: 70rpx;
    background: #f1f1f1;
    border-radius: 10rpx;
    padding: 0 20rpx;
}

.replay-view {
    background: #f1f1f1;
    margin-right: 60rpx;
    padding-top: 20rpx;
    padding-left: 20rpx;
    margin-top: 10rpx;
    border-radius: 10rpx;
}

.loading {
    text-align: center;
    margin: 0rpx 0 120rpx 0;
    color: #999;
    font-size: 30rpx;
    width: 100%;
    float: left;
}