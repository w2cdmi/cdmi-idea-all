<import src="/template/menu.wxml" />
<view class='page'>
  <view class='item person-item flex-between' bindtap='jumpToMiniprogram'>
    <view class='align-center'>
      <image src='/images/inbox/inbox.png' class='image-icon'></image>
      <view>微信小程序</view>
    </view>
    <view class='flex-align-center'>
      <image src='/images/arrow.png' class='image-size'></image>
    </view>
  </view>

  <view class='item person-item flex-between' bindtap='jumpToAppMgr'>
    <view class='align-center'>
      <image src='/images/inbox/inbox.png' class='image-icon'></image>
      <view>接入应用</view>
    </view>
    <view class='flex-align-center'>
      <image src='/images/arrow.png' class='image-size'></image>
    </view>
  </view>

  <view class='item person-item flex-between' bindtap='jumpToMicroService'>
    <view class='align-center'>
      <image src='/images/icon/me_spread.png' class='image-icon'></image>
      <view>平台微服务</view>
    </view>
    <view class='flex-align-center'>
      <image src='/images/arrow.png' class='image-size'></image>
    </view>
  </view>

  <view class='item person-item flex-between' bindtap='jumpToThirdService'>
    <view class='align-center'>
      <image src='/images/icon/person-file.png' class='image-icon'></image>
      <view>第三方服务配置</view>
    </view>
    <view class='flex-align-center'>
      <image src='/images/arrow.png' class='image-size'></image>
    </view>
  </view>

  <view class='item person-item flex-between' bindtap='jumpToBMSManager'>
    <view class='align-center'>
      <image src='/images/icon/person-file.png' class='image-icon'></image>
      <view>平台管理员</view>
    </view>
    <view class='flex-align-center'>
      <image src='/images/arrow.png' class='image-size'></image>
    </view>
  </view>

  <view class='item person-item flex-between' bindtap=''>
    <view class='align-center'>
      <image src='/images/icon/me_spread.png' class='image-icon'></image>
      <view>平台角色权限</view>
    </view>
    <view class='flex-align-center'>
      <image src='/images/arrow.png' class='image-size'></image>
    </view>
  </view>
  <view class='item person-item flex-between' bindtap='jumpToEnv'>
    <view class='align-center'>
      <image src='/images/icon/me_spread.png' class='image-icon'></image>
      <view>部署环境</view>
    </view>
    <view class='flex-align-center'>
      <image src='/images/arrow.png' class='image-size'></image>
    </view>
  </view>
  <tabbar selectIndex="4" bind:onShowMenu="onShowMenu"></tabbar>
  <menu isShowMenu='{{isShowMenu}}' bind:onUploadImage="onUploadImage" bind:onUploadVideo="onUploadVideo" bind:showCreateFolder="showCreateFolder"></menu>
</view>