/* 搜索框 */
.search-bar {
    position: relative;
    padding: 8px 10px;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    box-sizing: border-box;
    background-color: transparent;
    height: 44px;
}

.search-bar-form {
    position: relative;
    -webkit-box-flex: 1;
    -webkit-flex: auto;
    flex: auto;
    border-radius: 5px;
    background: transparent;
}

.search-bar-box {
    position: relative;
    padding-left: 30px;
    padding-right: 30px;
    width: 100%;
    box-sizing: border-box;
    z-index: 1;
    border-radius: 59px;
    overflow: hidden;
    background-color: #fff;
    float: left;
}

.icon-search-in-box {
    position: absolute;
    left: 10px;
    top: 7px;
}

.search-bar-input {
    height: 28px;
    line-height: 28px;
    font-size: 28rpx;
}

.sort-menu view {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.sort-view {
    position: absolute;
    top: 73rpx;
    right: 55rpx;
    font-size: 26rpx;
    z-index: 999;
}

.sort-menu {
    width: 91%;
    line-height: 52rpx;
    background-color: #fff;
    box-shadow: 10rpx 10rpx 20rpx 1rpx rgba(3, 3, 3, 0.3);
    border-radius: 0.5em;
    padding: 17rpx;
    height: 69%;
}

.sort-gg {
    border: solid transparent;
    border-bottom-color: #fff;
    border-width: 12rpx;
    border-top-width: 0;
    background: Transparent;
    left: 168rpx;
