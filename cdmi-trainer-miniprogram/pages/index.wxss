/* pages/index.wxss */

.page {
  background-color: #fff;
  height: 100%;
}

.scene-player {
  height: 480rpx;
}

.scene-title {
  border-bottom: 1px solid #f8f8f8;
}

.scene-member {
  border-bottom: 1px solid #f8f8f8;
}

.session-content {
  /* background-color: #f5f5f5; */
  height:auto;
}

.session-message {
  align-items: flex-start;
}

.session-message >view {
  padding-top: 10rpx;
}

.session-action {

}

.tool-bar {
  width: 100%;
  position: absolute;
  background: #fff;
  bottom: 0;
  left: 0;
  border-top: 1px solid #f8f8f8;
}

.tool-bar >view {
  width: auto;
  height: auto;
  padding: 10rpx 30rpx;
}

.tool-confirm {
  width: 100%;
  position: absolute;
  background: #fff;
  left: 0;
}

.tool-confirm > view {
  padding: 10rpx 30rpx;
}

.tool-language {
  flex-grow: 1;
  margin-left: auto;
  margin-right: auto;
}

.tool-record {
  flex-grow: 4;
  display: flex;
  justify-content: center;
}

.tool-scenechange {
  flex-grow: 1;
  display: flex;
  justify-content: center;
}

.tool-setting {
  flex-grow: 1;
  display: flex;
  justify-content: center;
}

.tool-invite {
  flex-grow: 1;
  display: flex;
  flex-direction: row-reverse;
}

/**鹰眼 **/
.hawkeye {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  background: #fff;
  top: 0;
  right: 10rpx;
  z-index:99999;
  /* opacity:0.3; */
}
